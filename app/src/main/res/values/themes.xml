<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base App Theme -->
    <style name="Base.Theme.Feels" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize base theme here -->
    </style>

    <!-- Main App Theme -->
    <style name="Theme.Feels" parent="Base.Theme.Feels" />

    <!-- Splash Theme -->
    <style name="Theme.Feels.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/black</item> <!-- or a drawable if needed -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

</resources>
